---
import Footer from "../components/Footer.astro";
import { SITE_TAGLINE } from "../config";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = SITE_TAGLINE,
  image = "/favicon.svg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#fff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Performance: DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="//gc.zgo.at" />
    <link rel="dns-prefetch" href="//chrisdodds.goatcounter.com" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:site_name" content="Chris Dodds" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <link
      rel="alternate"
      type="application/rss+xml"
      title="Chris Dodds"
      href="/rss.xml"
    />

    <!-- GoatCounter Analytics (privacy-friendly, free) -->
    <script
      data-goatcounter="https://chrisdodds.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"></script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    /* Practical Typography: Better font stack with serif option for body text */
    font-family: Charter, "Bitstream Charter", "Sitka Text", Cambria, serif;
    overflow-x: hidden;
  }

  body {
    margin: 0;
    padding: 0;
    background: #fff;
    color: #222;
    line-height: 1.5;
    overflow-x: hidden;
    width: 100%;
    /* Practical Typography: Better text rendering */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  /* Practical Typography: Monospaced fonts for code */
  code {
    font-family: "Courier New", Courier, "Liberation Mono", monospace;
    font-size: 0.9em; /* Slightly smaller than body text */
  }

  /* Skip link for accessibility */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: #0066cc;
    color: #fff;
    padding: 0.5rem 1rem;
    text-decoration: none;
    z-index: 100;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Shared layout styles */
  /* Practical Typography: Optimal line length is 45-90 characters (66 ideal) */
  /* At 18px font size, ~66 characters ≈ 33em ≈ 528px, but 650px is acceptable */
  main {
    max-width: 38em; /* ~608px at base font size - comfortable reading width */
    margin: 0 auto;
    padding: 2rem 1.5rem; /* Practical Typography: Generous margins */
    min-height: calc(100vh - 8rem);
    width: 100%;
    overflow-x: hidden;
  }

  main:focus {
    outline: none;
  }

  /* Common typography */
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: #222;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #222;
  }

  a {
    color: #0066cc;
    text-decoration: underline;
  }

  a:hover {
    color: #0052a3;
  }

  /* Back links */
  .back {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .back:hover {
    text-decoration: underline;
  }

  /* Post previews */
  .posts {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-preview {
    padding-bottom: 2rem;
    border-bottom: 1px solid #ddd;
  }

  .post-preview:last-child {
    border-bottom: none;
  }

  .post-preview a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-preview h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #222;
  }

  .post-preview a:hover h2 {
    text-decoration: underline;
  }

  .post-preview time {
    font-size: 0.875rem;
    color: #555; /* Better contrast than #666 */
    display: block;
    margin-bottom: 0.5rem;
  }

  .post-preview p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #222;
    margin: 0;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
    font-size: 0.875rem;
  }

  .pagination a {
    color: #0066cc;
    text-decoration: none;
  }

  .pagination a:hover {
    text-decoration: underline;
  }

  .pagination .disabled {
    color: #888; /* Better contrast than #999 */
  }

  /* Post content styles */
  /* Practical Typography: Body text 15-25px, line spacing 120-145% */
  .post-content,
  .content {
    font-size: 1.125rem; /* 18px - good for web */
    line-height: 1.6; /* 160% - slightly tighter than before, still comfortable */
    color: #222;
    /* Practical Typography: Optimal line length */
    max-width: 100%;
    /* Practical Typography: Widow and orphan control */
    orphans: 3;
    widows: 3;
  }

  /* Practical Typography: Clear hierarchy with proper spacing */
  .post-content h1,
  .post-content h2,
  .content h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 1.5em 0 0.5em 0; /* Use em for proportional spacing */
    line-height: 1.2; /* Tighter line height for headings */
  }

  .post-content h3,
  .content h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 1.25em 0 0.5em 0;
    line-height: 1.3;
  }

  /* Practical Typography: Space between paragraphs should be consistent */
  .post-content p,
  .content p {
    margin: 0 0 1.5em 0; /* Use em for proportional spacing */
    /* Practical Typography: Prevent widows and orphans */
    orphans: 3;
    widows: 3;
  }

  /* Practical Typography: First paragraph after heading needs less space */
  .post-content h1 + p,
  .post-content h2 + p,
  .post-content h3 + p,
  .content h1 + p,
  .content h2 + p,
  .content h3 + p {
    margin-top: 0;
  }

  .post-content a,
  .content a {
    color: #0066cc;
    text-decoration: underline;
  }

  .post-content a:hover,
  .content a:hover {
    color: #0052a3;
  }

  /* Accessibility: Focus states */
  a:focus-visible,
  button:focus-visible {
    outline: 2px solid #0066cc;
    outline-offset: 2px;
    border-radius: 2px;
  }

  .post-content code,
  .content code {
    background: #f5f5f5;
    padding: 0.125rem 0.25rem;
    font-size: 0.9em;
  }

  .post-content pre,
  .content pre {
    background: #f8f8f8;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.5em 0;
    border: 1px solid #e0e0e0;
    border-radius: 0.25rem;
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .post-content pre code,
  .content pre code {
    background: none;
    padding: 0;
  }

  /* Practical Typography: Blockquotes need proper indentation and spacing */
  .post-content blockquote,
  .content blockquote {
    border-left: 3px solid #ddd;
    padding-left: 1.5em; /* Use em for proportional spacing */
    margin: 1.5em 0;
    color: #555; /* Slightly darker than before for better readability */
    font-style: italic;
  }

  .post-content blockquote p,
  .content blockquote p {
    margin: 0;
  }

  .post-content ul,
  .post-content ol,
  .content ul,
  .content ol {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .post-content li,
  .content li {
    margin-bottom: 0.5rem;
  }

  .post-content strong,
  .content strong {
    font-weight: 700;
  }

  /* Responsive media */
  .post-content img,
  .content img,
  .post-content iframe,
  .content iframe,
  .post-content video,
  .content video {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .post-content iframe,
  .content iframe {
    aspect-ratio: 16 / 9;
    width: 100%;
    height: auto;
  }

  /* Ensure content doesn't overflow */
  .post-content,
  .content {
    overflow-wrap: break-word;
    word-wrap: break-word;
    max-width: 100%;
  }

  /* Print styles */
  @media print {
    main {
      max-width: 100%;
      padding: 0;
    }

    .hero,
    footer,
    .back,
    .post-nav,
    .related-posts,
    nav {
      display: none;
    }

    .post-content,
    .content {
      font-size: 12pt;
      line-height: 1.6;
    }

    a {
      color: #000;
      text-decoration: underline;
    }

    a[href^="http"]:after {
      content: " (" attr(href) ")";
      font-size: 0.9em;
      color: #555;
    }

    .post-content pre,
    .content pre {
      border: 1px solid #ccc;
      page-break-inside: avoid;
    }
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem;
      max-width: 100%; /* Full width on mobile for better use of space */
    }

    h1 {
      font-size: 2rem;
      line-height: 1.2;
    }

    h2 {
      font-size: 1.25rem;
      line-height: 1.3;
    }

    /* Single column for content grids (e.g. image galleries) */
    .post-content div[style*="display: grid"],
    .content div[style*="display: grid"] {
      grid-template-columns: 1fr !important;
    }

    .post-content div[style*="display: grid"] img[style*="grid-column"],
    .content div[style*="display: grid"] img[style*="grid-column"] {
      grid-column: 1 !important;
    }

    /* Practical Typography: Slightly smaller on mobile but still readable */
    .post-content,
    .content {
      font-size: 1rem; /* 16px - minimum for comfortable reading */
      line-height: 1.6; /* Maintain good line spacing */
    }
  }
</style>
