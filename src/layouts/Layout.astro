---
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Tech Person, Writer, Misc.",
  image = "/favicon.svg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <link
      rel="alternate"
      type="application/rss+xml"
      title="Chris Dodds"
      href="/rss.xml"
    />

    <!-- GoatCounter Analytics (privacy-friendly, free) -->
    <script
      data-goatcounter="https://chrisdodds.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"></script>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
    background: #fff;
    color: #222;
    line-height: 1.5;
  }

  code {
    font-family: "Courier New", monospace;
  }

  /* Shared layout styles */
  main {
    max-width: 650px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: 100vh;
  }

  /* Common typography */
  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: #222;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #222;
  }

  a {
    color: #0066cc;
    text-decoration: underline;
  }

  a:hover {
    color: #0052a3;
  }

  /* Back links */
  .back {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .back:hover {
    text-decoration: underline;
  }

  /* Post previews */
  .posts {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-preview {
    padding-bottom: 2rem;
    border-bottom: 1px solid #ddd;
  }

  .post-preview:last-child {
    border-bottom: none;
  }

  .post-preview a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-preview h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #222;
  }

  .post-preview a:hover h2 {
    text-decoration: underline;
  }

  .post-preview time {
    font-size: 0.875rem;
    color: #666;
    display: block;
    margin-bottom: 0.5rem;
  }

  .post-preview p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #222;
    margin: 0;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
    font-size: 0.875rem;
  }

  .pagination a {
    color: #0066cc;
    text-decoration: none;
  }

  .pagination a:hover {
    text-decoration: underline;
  }

  .pagination .disabled {
    color: #999;
  }

  /* Post content styles */
  .post-content,
  .content {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #222;
  }

  .post-content h1,
  .post-content h2,
  .content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 2rem 0 0.5rem 0;
  }

  .post-content h3,
  .content h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 1.5rem 0 0.5rem 0;
  }

  .post-content p,
  .content p {
    margin: 0 0 1.25rem 0;
  }

  .post-content a,
  .content a {
    color: #0066cc;
    text-decoration: underline;
  }

  .post-content a:hover,
  .content a:hover {
    color: #0052a3;
  }

  .post-content code,
  .content code {
    background: #f5f5f5;
    padding: 0.125rem 0.25rem;
    font-size: 0.9em;
  }

  .post-content pre,
  .content pre {
    background: #f5f5f5;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid #ddd;
  }

  .post-content pre code,
  .content pre code {
    background: none;
    padding: 0;
  }

  .post-content blockquote,
  .content blockquote {
    border-left: 3px solid #ddd;
    padding-left: 1rem;
    margin: 1rem 0;
    color: #666;
  }

  .post-content blockquote p,
  .content blockquote p {
    margin: 0;
  }

  .post-content ul,
  .post-content ol,
  .content ul,
  .content ol {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .post-content li,
  .content li {
    margin-bottom: 0.5rem;
  }

  .post-content strong,
  .content strong {
    font-weight: 700;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1.25rem;
    }
  }
</style>
