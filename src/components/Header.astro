---
interface Props {
  showAbout?: boolean;
}

const { showAbout = true } = Astro.props;
---

<header class="hero">
  <div class="header-content">
    <div>
      <h1><a href="/">Chris Dodds</a></h1>
      <p class="tagline">Tech Person, Writer, Misc.</p>
    </div>
    <div class="header-links">
      {showAbout && <a href="/about" class="about-link">About</a>}
      <a href="/rss.xml" class="rss-link" aria-label="RSS Feed">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
        >
          <path
            d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"
          />
        </svg>
      </a>
    </div>
  </div>
</header>

<style>
  .hero {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: start;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
  }

  h1 a {
    color: #1a1a1a;
    text-decoration: none;
  }

  h1 a:hover {
    color: #404040;
  }

  .tagline {
    font-size: 1rem;
    color: #737373;
    margin: 0;
    font-weight: 400;
    line-height: 1.6;
  }

  .header-links {
    display: flex;
    gap: 0.5rem;
  }

  .about-link,
  .rss-link {
    color: #737373;
    text-decoration: none;
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    transition: all 0.2s ease;
    border: 1px solid #e5e5e5;
  }

  .rss-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .about-link:hover,
  .rss-link:hover {
    color: #1a1a1a;
    border-color: #d4d4d4;
  }

  @media (max-width: 640px) {
    .hero {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    .tagline {
      font-size: 0.9375rem;
    }

    .header-links {
      flex-direction: column;
      gap: 0.375rem;
    }
  }
</style>

