---
interface Props {
  showAbout?: boolean;
}

const { showAbout = true } = Astro.props;
---

<header class="hero">
  <div class="header-content">
    <div>
      <h1><a href="/">Chris Dodds</a></h1>
      <p class="tagline">Tech Person, Writer, Misc.</p>
    </div>
    <nav class="header-links" aria-label="Main navigation">
      <a href="/tags" class="nav-link" title="Browse by tags">Tags</a>
      {showAbout && <a href="/about" class="nav-link" title="About me">About</a>}
      <a
        href="https://bsky.app/profile/liquid-chicken.bsky.social"
        class="social-link"
        title="Follow me on Bluesky"
        aria-label="Bluesky"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
        >
          <path
            d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"
          />
        </svg>
      </a>
      <a href="/rss.xml" class="social-link" title="RSS Feed" aria-label="RSS Feed">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="16"
          height="16"
          fill="currentColor"
        >
          <path
            d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"
          />
        </svg>
      </a>
    </nav>
  </div>
</header>

<style>
  .hero {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #ddd;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  h1 a {
    color: #222;
    text-decoration: none;
  }

  h1 a:hover {
    text-decoration: underline;
  }

  .tagline {
    font-size: 0.875rem;
    color: #666;
    margin: 0.25rem 0 0 0;
  }

  .header-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .nav-link,
  .social-link {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .nav-link:hover,
  .social-link:hover {
    text-decoration: underline;
  }

  .social-link {
    display: flex;
    align-items: center;
  }

  @media (max-width: 640px) {
    .header-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .header-links {
      gap: 0.75rem;
    }
  }
</style>

