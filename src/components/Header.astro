---
import { SITE_TAGLINE } from "../config";

interface Props {
  showAbout?: boolean;
}

const { showAbout = true } = Astro.props;
---

<header class="hero">
  <div class="header-content">
    <div class="header-brand">
      <h1><a href="/">Chris Dodds</a></h1>
      <p class="tagline">{SITE_TAGLINE}</p>
    </div>
    <nav class="header-links" aria-label="Main navigation">
      <a href="/writing" class="nav-link" title="Writing">Writing</a>
      <a href="https://necessarycuts.com" class="nav-link" title="Necessary Cuts" target="_blank" rel="noopener noreferrer">Necessary Cuts</a>
      {showAbout && <a href="/about" class="nav-link" title="About me">About</a>}
      <a href="/subscribe" class="nav-link" title="Subscribe">Subscribe</a>
    </nav>
  </div>
</header>

<style>
  .hero {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #ddd;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .header-brand {
    min-width: 0;
    flex: 1 1 auto;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
  }

  h1 a {
    color: #222;
    text-decoration: none;
  }

  h1 a:hover {
    text-decoration: underline;
  }

  .tagline {
    font-size: 0.875rem;
    color: #555;
    margin: 0.25rem 0 0 0;
  }

  .header-links {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-shrink: 0;
  }

  .nav-link {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .nav-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .header-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .header-links {
      gap: 0.75rem;
    }
  }
</style>

