<style>
  footer {
    max-width: 33em;
    margin: 3rem auto 0 auto;
    padding: 2rem 1.5rem 1.5rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .copyright {
    font-size: 0.8125rem;
    color: #999;
    margin: 0;
  }

  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
    font-size: 0.875rem;
  }

  .footer-nav a {
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: #0066cc;
    text-decoration: underline;
  }

  .separator {
    color: #ccc;
    user-select: none;
  }

  @media (max-width: 640px) {
    footer {
      padding: 1.5rem 1rem 1rem;
      margin-top: 2rem;
    }

    .footer-nav {
      gap: 0.5rem;
    }
  }
</style>

