---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const postsPerPage = 5;
const totalPages = Math.ceil(allPosts.length / postsPerPage);
const currentPage = 1;
const posts = allPosts.slice(0, postsPerPage);

const postsWithContent = await Promise.all(
  posts.map(async (post) => ({
    ...post,
    Content: (await post.render()).Content,
  }))
);
---

<Layout title="Chris Dodds" description="Tech Person, Writer, Misc.">
  <!-- Homepage structured data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      name: "Chris Dodds",
      url: "https://chrisdodds.net",
      description: "Tech Person, Writer, Misc.",
      author: {
        "@type": "Person",
        name: "Chris Dodds",
        url: "https://chrisdodds.net",
        sameAs: [
          "https://bsky.app/profile/liquid-chicken.bsky.social",
          "https://www.linkedin.com/in/doddschris/",
        ],
      },
      potentialAction: {
        "@type": "ReadAction",
        target: "https://chrisdodds.net/rss.xml",
      },
    })}
  />
  <main id="main-content">
    <Header />

    <section class="posts">
      {
        postsWithContent.map((post) => (
          <article class="post-full">
            <header>
              <h2>
                <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              </h2>
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString("en-us", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <a href={`/tags/${tag}/`} class="tag">{tag}</a>
                  ))}
                </div>
              )}
            </header>
            <div class="post-content">
              <post.Content />
            </div>
          </article>
        ))
      }
    </section>

    {
      totalPages > 1 && (
        <nav class="pagination" aria-label="Pagination">
          <span class="disabled" aria-hidden="true">← Newer</span>
          {totalPages > 1 ? (
            <a href="/blog/2">Older →</a>
          ) : (
            <span class="disabled" aria-hidden="true">Older →</span>
          )}
        </nav>
      )
    }
  </main>
</Layout>

<style>
  .post-full {
    padding-bottom: 2rem;
    border-bottom: 1px solid #ddd;
  }

  .post-full:last-child {
    border-bottom: none;
  }

  .post-full header {
    margin-bottom: 1rem;
  }

  .post-full h2 {
    font-size: 2rem;
  }

  .post-full h2 a {
    text-decoration: none;
    color: inherit;
  }

  .post-full time {
    font-size: 0.875rem;
    color: #666;
    display: block;
    margin-bottom: 0.5rem;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .post-tags .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f8f8f8;
    border: 1px solid #e0e0e0;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    text-decoration: none;
    color: #222;
    transition: all 0.2s ease;
  }

  .post-tags .tag:hover {
    background: #f0f0f0;
    border-color: #ccc;
    color: #0066cc;
  }
</style>
