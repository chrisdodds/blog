---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Chris Dodds">
  <main>
    <header class="hero">
      <h1>Chris Dodds</h1>
      <p class="tagline">Tech Person, Writer, Misc.</p>
    </header>

    <section class="about">
      <p>
        Hey, I'm Chris. I build infrastructure, write, make music, and sometimes
        do a little woodworking.
      </p>
      <p>
        You can find me on <a href="https://www.linkedin.com/in/doddschris/" target="_blank" rel="noopener noreferrer">LinkedIn</a> or email me at chris [at] focusfire [dot] net.
      </p>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: 100vh;
  }

  .hero {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e5e5;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1rem;
    color: #737373;
    margin: 0;
    font-weight: 400;
    line-height: 1.6;
  }

  .about {
    max-width: 600px;
  }

  .about p {
    font-size: 1.25rem;
    line-height: 1.8;
    color: #404040;
    margin: 0 0 1.5rem 0;
  }

  .about a {
    color: #1a1a1a;
    text-decoration: none;
    border-bottom: 1px solid #d4d4d4;
    transition: border-color 0.2s ease;
  }

  .about a:hover {
    border-bottom-color: #1a1a1a;
  }

  @media (max-width: 640px) {
    main {
      padding: 2rem 1rem;
    }

    .hero {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    .tagline {
      font-size: 0.9375rem;
    }

    .about p {
      font-size: 1.125rem;
    }
  }
</style>
