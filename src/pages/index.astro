---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const latestPost = allPosts[0];
const latestContent = latestPost ? await latestPost.render() : null;
---

<Layout title="Chris Dodds">
  <main>
    <Header />

    {
      latestPost && latestContent && (
        <article class="latest-post">
          <header>
            <h2>
              <a href={`/blog/${latestPost.slug}/`}>{latestPost.data.title}</a>
            </h2>
            <time datetime={latestPost.data.pubDate.toISOString()}>
              {latestPost.data.pubDate.toLocaleDateString("en-us", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </time>
          </header>
          <div class="post-content">
            <latestContent.Content />
          </div>
        </article>
      )
    }
  </main>
</Layout>

<style>
  .latest-post {
    margin-top: 0;
  }

  .latest-post header {
    margin-bottom: 2rem;
  }

  .latest-post h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .latest-post h2 a {
    color: #1a1a1a;
    text-decoration: none;
  }

  .latest-post h2 a:hover {
    color: #404040;
  }

  .latest-post time {
    font-size: 0.875rem;
    color: #a3a3a3;
    display: block;
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #404040;
  }

  .post-content :global(h1),
  .post-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 1rem 0;
    color: #1a1a1a;
    letter-spacing: -0.01em;
  }

  .post-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    color: #1a1a1a;
  }

  .post-content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .post-content :global(a) {
    color: #1a1a1a;
    text-decoration: none;
    border-bottom: 1px solid #d4d4d4;
    transition: border-color 0.2s ease;
  }

  .post-content :global(a:hover) {
    border-bottom-color: #1a1a1a;
  }

  .post-content :global(code) {
    background: #f5f5f5;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: "SF Mono", "Consolas", "Monaco", monospace;
    color: #525252;
    font-weight: 400;
  }

  .post-content :global(pre) {
    background: #1a1a1a;
    padding: 1.5rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 0 0 1.5rem 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    color: #e5e5e5;
    font-weight: 400;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid #d4d4d4;
    padding-left: 1.5rem;
    margin: 0 0 1.5rem 0;
    color: #737373;
    font-style: italic;
    background: #fafafa;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 1.75rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .post-content :global(strong) {
    color: #1a1a1a;
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .latest-post {
      padding-top: 2rem;
    }

    .latest-post header {
      margin-bottom: 1.5rem;
    }

    .latest-post h2 {
      font-size: 1.25rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h1),
    .post-content :global(h2) {
      font-size: 1.25rem;
    }

    .post-content :global(h3) {
      font-size: 1.125rem;
    }
  }
</style>
