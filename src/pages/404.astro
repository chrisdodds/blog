---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="404 - Page Not Found">
  <main>
    <Header />

    <div class="error-container">
      <div class="error-card">
        <div class="error-number">404</div>
        <h1>Page Not Found</h1>
        <p>
          Looks like this page wandered off. Maybe it never existed, or maybe
          it's gone for good.
        </p>
        <div class="actions">
          <a href="/" class="button">Go Home</a>
          <a href="/tags" class="button-secondary">Browse Tags</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }

  .error-card {
    background: #f9faf9;
    border: 1px solid #d4d4d4;
    border-radius: 8px;
    padding: 4rem 3rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
    text-align: center;
    max-width: 500px;
  }

  .error-number {
    font-size: 6rem;
    font-weight: 800;
    color: #6366f1;
    line-height: 1;
    margin-bottom: 1rem;
    letter-spacing: -0.05em;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }

  p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: #525252;
    margin: 0 0 2rem 0;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .button,
  .button-secondary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .button {
    background: #6366f1;
    color: #ffffff;
    border: 1px solid #6366f1;
  }

  .button:hover {
    background: #4f46e5;
    border-color: #4f46e5;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
  }

  .button-secondary {
    background: transparent;
    color: #6366f1;
    border: 1px solid #d4d4d4;
  }

  .button-secondary:hover {
    border-color: #6366f1;
    background: #f9fafb;
  }

  @media (max-width: 640px) {
    .error-card {
      padding: 3rem 2rem;
    }

    .error-number {
      font-size: 4rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    p {
      font-size: 1.125rem;
    }

    .actions {
      flex-direction: column;
      gap: 0.75rem;
    }

    .button,
    .button-secondary {
      width: 100%;
    }
  }
</style>
