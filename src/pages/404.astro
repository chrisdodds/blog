---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="404 - Page Not Found">
  <main>
    <Header />

    <div class="error-container">
      <div class="error-card">
        <div class="error-number">404</div>
        <h1>Page Not Found</h1>
        <p>
          Looks like this page wandered off. Maybe it never existed, or maybe
          it's gone for good.
        </p>
        <div class="actions">
          <a href="/" class="button">Go Home</a>
          <a href="/tags" class="button-secondary">Browse Tags</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }

  .error-card {
    text-align: center;
    max-width: 500px;
  }

  .error-number {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.125rem;
    line-height: 1.7;
    margin: 0 0 2rem 0;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .error-number {
      font-size: 3rem;
    }

    p {
      font-size: 1rem;
    }
  }
</style>
