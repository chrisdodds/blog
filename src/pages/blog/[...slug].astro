---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="post">
    <header>
      <a href="/" class="back">‚Üê Back</a>
      <time datetime={post.data.pubDate.toISOString()}>
        {
          post.data.pubDate.toLocaleDateString("en-us", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </time>
      <h1>{post.data.title}</h1>
      <p class="description">{post.data.description}</p>
      {
        post.data.tags && (
          <div class="tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )
      }
    </header>

    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .post {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: 100vh;
  }

  header {
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .back {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: #737373;
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
    font-weight: 400;
    transition: all 0.2s ease;
    padding: 0.5rem 0;
  }

  .back:hover {
    color: #1a1a1a;
    transform: translateX(-4px);
  }

  time {
    font-size: 0.875rem;
    color: #a3a3a3;
    display: block;
    margin-bottom: 1rem;
    font-weight: 400;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    color: #1a1a1a;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .description {
    font-size: 1.375rem;
    color: #737373;
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
    font-weight: 400;
  }

  .tags {
    display: flex;
    gap: 0.625rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8125rem;
    padding: 0.375rem 0.875rem;
    background: #f5f5f5;
    border-radius: 4px;
    color: #525252;
    font-weight: 400;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #404040;
  }

  .content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin: 3rem 0 1.25rem 0;
    color: #1a1a1a;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
    color: #1a1a1a;
    letter-spacing: -0.01em;
  }

  .content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .content :global(a) {
    color: #1a1a1a;
    text-decoration: none;
    border-bottom: 1px solid #d4d4d4;
    transition: border-color 0.2s ease;
  }

  .content :global(a:hover) {
    border-bottom-color: #1a1a1a;
  }

  .content :global(code) {
    background: #f5f5f5;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: "SF Mono", "Consolas", "Monaco", monospace;
    color: #525252;
    font-weight: 400;
  }

  .content :global(pre) {
    background: #1a1a1a;
    padding: 1.5rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 0 0 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    color: #e5e5e5;
    font-weight: 400;
  }

  .content :global(blockquote) {
    border-left: 3px solid #d4d4d4;
    padding-left: 1.5rem;
    margin: 0 0 1.5rem 0;
    color: #737373;
    font-style: italic;
    background: #fafafa;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 1.75rem;
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
  }

  .content :global(strong) {
    color: #1a1a1a;
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .post {
      padding: 2rem 1rem;
    }

    header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
    }

    h1 {
      font-size: 2rem;
    }

    .description {
      font-size: 1.125rem;
    }

    .content {
      font-size: 1rem;
    }

    .content :global(h2) {
      font-size: 1.5rem;
      margin: 2.5rem 0 1rem 0;
    }

    .content :global(h3) {
      font-size: 1.25rem;
      margin: 2rem 0 0.75rem 0;
    }
  }
</style>
