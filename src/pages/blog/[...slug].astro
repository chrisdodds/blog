---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("blog"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  return posts.map((post, index) => ({
    params: { slug: post.slug },
    props: {
      post,
      prevPost: index < posts.length - 1 ? posts[index + 1] : null,
      nextPost: index > 0 ? posts[index - 1] : null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();

// Find related posts (shared tags, excluding current post)
const allPosts = (await getCollection("blog")).filter((p) => p.slug !== post.slug && !p.data.draft);
const relatedPosts = allPosts
  .filter((p) => {
    if (!post.data.tags || !p.data.tags) return false;
    return p.data.tags.some((tag) => post.data.tags?.includes(tag));
  })
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const ogImage = `/og/${post.slug}.png`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.data.title,
  description: post.data.description,
  datePublished: post.data.pubDate.toISOString(),
  dateModified: post.data.updatedDate
    ? post.data.updatedDate.toISOString()
    : post.data.pubDate.toISOString(),
  author: {
    "@type": "Person",
    name: "Chris Dodds",
    url: "https://chrisdodds.net",
  },
  publisher: {
    "@type": "Person",
    name: "Chris Dodds",
  },
  image: `https://chrisdodds.net${ogImage}`,
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": `https://chrisdodds.net/blog/${post.slug}/`,
  },
  ...(post.data.tags && post.data.tags.length > 0
    ? { keywords: post.data.tags.join(", ") }
    : {}),
};
---

<Layout
  title={`${post.data.title} - Chris Dodds`}
  description={post.data.description}
  image={ogImage}
>
  <!-- Article-specific meta tags -->
  <meta property="article:published_time" content={post.data.pubDate.toISOString()} />
  {post.data.updatedDate && (
    <meta property="article:modified_time" content={post.data.updatedDate.toISOString()} />
  )}
  <meta property="article:author" content="Chris Dodds" />
  {post.data.tags &&
    post.data.tags.map((tag) => (
      <meta property="article:tag" content={tag} />
    ))}
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <!-- Breadcrumb structured data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          name: "Home",
          item: "https://chrisdodds.net/",
        },
        {
          "@type": "ListItem",
          position: 2,
          name: post.data.title,
          item: `https://chrisdodds.net/blog/${post.slug}/`,
        },
      ],
    })}
  />
  <main id="main-content">
    <article>
      <header>
        <a href="/" class="back">← Back</a>
        <time datetime={post.data.pubDate.toISOString()}>
          {
            post.data.pubDate.toLocaleDateString("en-us", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
        <h1>{post.data.title}</h1>
        <p class="description">{post.data.description}</p>
        {
          post.data.tags && (
            <div class="tags">
              {post.data.tags.map((tag) => (
                <a href={`/tags/${tag}/`} class="tag">{tag}</a>
              ))}
            </div>
          )
        }
      </header>

      <div class="content">
        <Content />
      </div>

      <aside class="subscribe-cta">
        <p><strong>Enjoyed this post?</strong> <a href="/subscribe">Subscribe</a> to get new posts by email or RSS.</p>
      </aside>

      {
        relatedPosts.length > 0 && (
          <section class="related-posts">
            <h2>Related Posts</h2>
            <ul>
              {relatedPosts.map((relatedPost) => (
                <li>
                  <a href={`/blog/${relatedPost.slug}/`}>{relatedPost.data.title}</a>
                  <time datetime={relatedPost.data.pubDate.toISOString()}>
                    {relatedPost.data.pubDate.toLocaleDateString("en-us", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </time>
                </li>
              ))}
            </ul>
          </section>
        )
      }

      {
        (prevPost || nextPost) && (
          <nav class="post-nav" aria-label="Post navigation">
            {prevPost ? (
              <a href={`/blog/${prevPost.slug}/`} class="prev">
                <span class="label">← Older</span>
                <span class="title">{prevPost.data.title}</span>
              </a>
            ) : (
              <div />
            )}
            {nextPost ? (
              <a href={`/blog/${nextPost.slug}/`} class="next">
                <span class="label">Newer →</span>
                <span class="title">{nextPost.data.title}</span>
              </a>
            ) : (
              <div />
            )}
          </nav>
        )
      }
    </article>
  </main>
</Layout>

<style>
  header {
    margin-bottom: 2rem;
  }

  time {
    font-size: 0.875rem;
    color: #555;
    display: block;
    margin-bottom: 0.5rem;
  }

  h1 {
    line-height: 1.3;
  }

  .description {
    font-size: 1.125rem;
    color: #555;
    margin: 0 0 0.5rem 0;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.75rem;
  }

  .tags .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f8f8f8;
    border: 1px solid #e0e0e0;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    text-decoration: none;
    color: #222;
    transition: all 0.2s ease;
  }

  .tags .tag:hover {
    background: #f0f0f0;
    border-color: #ccc;
    color: #0066cc;
  }

  .subscribe-cta {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
    font-size: 1.125rem;
  }

  .subscribe-cta p {
    margin: 0;
  }

  .related-posts {
    margin-top: 2rem;
  }

  .related-posts h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .related-posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .related-posts li {
    margin-bottom: 1rem;
  }

  .related-posts a {
    display: block;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .related-posts time {
    font-size: 0.8125rem;
    color: #777;
  }

  .post-nav {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    font-size: 0.875rem;
  }

  .post-nav a {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-decoration: none;
    color: #0066cc;
  }

  .post-nav a:hover {
    text-decoration: underline;
  }

  .post-nav .next {
    text-align: right;
  }

  .post-nav .label {
    color: #555;
  }

  .post-nav .title {
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .post-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .post-nav .next {
      text-align: left;
    }
  }
</style>
