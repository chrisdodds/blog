---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Writing - Chris Dodds">
  <main id="main-content">
    <Header />

    <section class="writing">
      <h2>Published Work</h2>
      <h3>Fiction</h3>
      <ul>
        <li>
          <em>Necessary Cuts</em> (novella) - Miami University Press
          (forthcoming, winner of the 2026 Novella Prize)
        </li>
        <li><em>Dog</em> (short story) - BULL (forthcoming)</li>
      </ul>
    </section>
  </main>
</Layout>

<style>
  .writing h2 {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
  }

  .writing ul {
    font-size: 1.125rem;
    line-height: 1.7;
    margin: 0;
    padding-left: 1.5rem;
  }

  .writing li {
    margin-bottom: 0.75rem;
  }
</style>
